@page
@model EdnaMonitoring.Web.Pages.TransLines.BulkUploadModel
@{
    ViewData["Title"] = "BulkUpload Lines";
}

<h1>BulkUpload Transmission Line elements</h1>

<h4>Enter ICT elements for bulk upload with each line in the format </h4>
<h4>Name, Substation, Edna-Id, Voltage Level</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter upload string below</label>
                <textarea asp-for="UploadString" class="form-control" placeholder="Enter upload string"></textarea>
                <span asp-validation-for="UploadString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Bulk Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

