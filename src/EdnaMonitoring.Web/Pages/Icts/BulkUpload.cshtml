@page
@model EdnaMonitoring.Web.Pages.Icts.BulkUploadModel
@{
    ViewData["Title"] = "BulkUpload ICTs";
}

<h1>BulkUpload ICT elements</h1>

<h4>Enter ICT elements for bulk upload with each line in the format </h4>
<h4>Name, Edna-Id, high-Voltage, low-Voltage</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <textarea asp-for="UploadString" class="form-control"></textarea>
                <span asp-validation-for="UploadString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Bulk Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
